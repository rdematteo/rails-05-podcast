<h1>Edit Podcast</h1>

<form action="<%= podcast_path(params[:id]) %>" method="POST" >
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <input type="hidden" name="_method" value="patch" />

    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= @podcast.name%>"/>

    <label for="genre">genre</label>
    <input type="text" name="genre" name="genre" id="genre" value="<%= @podcast.genre %>"/>


    <label for="explicit_content">Food type</label>
    <input type="text" name="explicit_content" id="explicit_content"  value="<%= @podcast.explicit_content %>"/>

    <input type="submit" value="Update" />
</form>
